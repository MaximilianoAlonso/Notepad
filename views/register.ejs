<!DOCTYPE html>
<html>
  <!-- head -->
  <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>

    <main class="main_register">
      <h3>Registrate!</h3>

      <% if (locals.errors) { %>
     
        <h5 class="credencialesInvalidas">   <%= locals.errors.email.msg %></h5>
       <% } %>
   
      <form id="formRegister" method="POST">
        <div>
          <label for="name">Nombre: </label>
          <input type="text" name="name" id="name" />
          <span id="nameError"></span>
        </div>
        <div>
          <label for="email">Correo: </label>
          <input type="email" name="email" id="email" />
          <span id="emailError"></span>
        
        </div>
        <div>
          <label for="password">Contraseña: </label>
          <input type="password" name="password" id="password" />
          <span id="passwordError"></span>
        </div>
        <div>
          <label for="password2">Confirmar contraseña: </label>
          <input type="password" name="password2" id="password2" />
          <span id="password2Error"></span>
        </div>
        <div class="buton_box">
            <button class="submitEnviarRegister" type="submit">Enviar</button>
            <a class="googleButon" href="/auth/login/google">Iniciar con <img class="google-icon"  width="20px" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
              <h5 class="text-google">oogle</h5></a>
        </div>
      
      </form>
    </main>

    <%- include('./partials/footer') %>
    <script src="/javascripts/index.js"></script>
    <script src="/javascripts/register.js"></script>
  </body>
</html>
